.container
  .page-header
    .row
      .col-md-6.col-md-offset-3
        %h1 Register

  .row
    .col-md-6.col-md-offset-3
      = form_for @user, class:'form-horizontal' do |f|
        = render "shared/form_errors", model: @user
        .form-group
          = label_tag :admission_code
          = text_field_tag :admission_code, @admission_code,
            placeholder: 'Your admission code as given by the teacher',
            class: 'form-control'
        .form-group
          = f.label :email
          = f.text_field :email,
            class: 'form-control',
            placeholder: 'Your email'
        .form-group
          = f.label :password
          = f.password_field :password,
            class: 'form-control',
            placeholder: 'Enter a password'
        .form-group
          = f.label :password_confirmation
          = f.password_field :password_confirmation,
            class: 'form-control',
            placeholder: 'Password again'
        .form-group
          = f.label :firstname
          = f.text_field :firstname,
            class: 'form-control',
            placeholder: 'Your firstname'
        .form-group
          = f.label :lastname
          = f.text_field :lastname,
            class: 'form-control',
            placeholder: 'Your lastname'
        .form-group
          = f.submit "Register",
            :'data-no-turbolink' => true,
            class: 'btn btn-primary form-control'

        %p.lead
          If you don't have an admission code, contact your teacher as soon as possible to aquire one :)

