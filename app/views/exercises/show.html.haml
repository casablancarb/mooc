.container
  .page-header
    %h1
      Exercise
      %small
        = @exercise.title

  .row
    .col-md-7
      %iframe{ width:'100%', height:'400', src:"//www.youtube.com/embed/#{@exercise.video_id}", frameborder:'0', allowfullscreen:'true' }
  
    .col-md-5
      %h3 About
      %p
        = @exercise.description
      = link_to 'Leave feedback', new_exercise_feedback_path(@exercise),
        class: 'btn btn-info'

  .page-header
    %h3 Questions

  - if @exercise.questions.length > 0
    = render 'questions_forms'
  - else
    %p
      This exercise currently has no questions. Please check back soon :)
