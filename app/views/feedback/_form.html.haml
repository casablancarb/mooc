= form_for [exercise, Feedback.new] do |f|
  = render 'shared/form_errors', model: Feedback.new
  .form-group
    = f.label :body
    = f.text_area :body,
      rows: 6,
      class: 'form-control'
  .form-group
    = f.label :rating, 'Rate this exercise'
    = f.select :rating,
      options_for_select([nil, ['4: Very good', 4],['3: Good', 3],['2: Not so good', 2],['1: Terrible', 1]]),
      {},
      class: 'form-control'
  .form-group
    = f.submit 'Submit feedback',
      class: 'btn btn-primary'

