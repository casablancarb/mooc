.container
  .page-header
    .row
      .col-md-9
        %h1
          Question for
          %span.text-muted
            = @question.exercise.title
      .col-md-3.text-right
        = link_to 'Edit question body', edit_admin_question_path(@question),
          class: 'btn btn-default btn-lg'

  %p.lead
    = @question.body
