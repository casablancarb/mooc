= form_for [:admin, @course, @section] do |f|
  = render "shared/form_errors", model: @section
  .form-group
    = f.label :title
    = f.text_field :title,
      class: 'form-control'
  .form-group
    = f.label :description
    = f.text_area :description,
      class: 'form-control'
  .form-group
    = f.submit 'Save'
