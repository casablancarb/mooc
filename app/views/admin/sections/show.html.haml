.container
  .page-header
    = link_to 'Add exercise', new_admin_section_exercise_path(@section),
      class: 'btn btn-success pull-right'
    %h1
      = @section.title
      %br
      %small
        = @course.summary

  %table.table.table-hover
    - @section.exercises.each do |exercise|
      %tr
        %td.lead
          = exercise.title
        %td.text-right
          = link_to 'Edit', edit_admin_section_exercise_path(@section, exercise),
            class: 'btn btn-default'
          = button_to 'Delete', admin_section_exercise_path(@section, exercise),
            method: :delete,
            class: 'btn btn-danger',
            confirm: "Are you sure you want to delete #{exercise.title}"

