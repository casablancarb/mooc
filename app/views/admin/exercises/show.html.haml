.container
  .page-header
    .row
      .col-md-8
        %h1
          Exercise
          %small
            = @exercise.title
      .col-md-4.text-right
        = link_to 'Edit exercise info', edit_admin_section_exercise_path(@section, @exercise),
          class: 'btn btn-default btn-lg'

  %p.lead
    = @exercise.description
  %iframe{ width:'100%', height:'315', src:"//www.youtube.com/embed/#{@exercise.video_id}", frameborder:'0', allowfullscreen:'true' }

  %h2 Questions
  - @exercise.questions.each do |question|
    .list-group
      = link_to admin_question_path(question),
        class:'list-group-item' do
        %h4.list-group-item-heading
          = question.body
        .list-group-item-text
          Question contain
          %span{ class:"text-#{question.alternatives_status_class}" }
            #{question.number_of_alternatives } alternatives,
          out of which
          %span{ class:"text-#{question.correct_alternatives_status_class}" }
            #{question.number_of_correct_alternatives} are correct.

  = link_to 'Add question', new_admin_exercise_question_path(@exercise),
    class: 'btn btn-primary',
    "data-no-turbolink" => ""
